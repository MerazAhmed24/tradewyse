<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#ffff00</item>
    </style>

    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>-->

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar2" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/text_color_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#385494</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar1" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/text_color_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#566891</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="item_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.3</item>
        <item name="android:layout_marginTop">@dimen/common_paddng_3dp</item>
        <item name="android:layout_marginBottom">@dimen/common_paddng_3dp</item>
        <item name="android:background">@color/text_color_grey</item>
    </style>

    <style name="item_separator_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/common_paddng_3dp</item>
        <item name="android:layout_marginBottom">@dimen/common_paddng_3dp</item>
        <item name="android:background">@color/text_color_white</item>
    </style>

    <style name="style_progress_dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/color_app_dark_bg</item>
        <item name="android:background">@color/text_color_white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/color_app_dark_bg</item>
        <!-- Used for the background -->
        <item name="android:windowBackground">@drawable/bacground_pupup_alert_dialog</item>
    </style>


    <!-- dialog with corner radius-->
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Used for the background with corner radius -->
        <item name="android:windowBackground">@drawable/bacground_pupup_alert_dialog</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/color_app_dark_bg</item>
    </style>
    <style name="MyAlertDialogStyle2" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/color_app_dark_bg</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="progress_dialog" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/progress_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/common_paddng_5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settings_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="cardBackgroundColor">@color/settings_bg</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/common_paddng_10dp</item>
    </style>

    <style name="settings_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/common_paddng_4dp</item>
    </style>

    <style name="settings_arrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srcCompat">@drawable/ic_arrow</item>
        <item name="android:tint">@color/text_color_white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:rotation">270</item>
    </style>

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">?colorAccent</item>
        <item name="slider_locked">false</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <!-- <item name="android:windowIsTranslucent">true</item>-->
        <!--  <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/text_color_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AddBannerDialog" parent="android:Theme.Dialog">
        <!-- <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- No backgrounds, titles or window float -->
        <!--<item name="android:windowBackground">@drawable/round_corner_ad_baner_popup</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomDialog2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="StockChangedCellStyle">
        <item name="fontFamily">@font/sfregular</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/dark_black_color</item>
    </style>
    <style name="StockChangedCellHeaderStyle">
        <item name="fontFamily">@font/sfregular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <color name="gray">#6B6B6B</color>

    <style name="StyledTilEditTextTheme1">
        <item name="colorControlNormal">@color/text_color_grey</item>
        <item name="colorControlActivated">@color/dark_black_color</item>
    </style>

    <style name="StyledTilEditText1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/StyledTilEditTextTheme1</item>
    </style>

</resources>
