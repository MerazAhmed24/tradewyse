<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_parent_rl"
    android:background="@color/color_other_profile_bg"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    app:layout_goneMarginBottom="@dimen/_5sdp"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/circle_white_fill">

        <ImageView
            android:id="@+id/iv_accept"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:background="@drawable/accept_dark_blue" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_image_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_5sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_image"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/profile_icon"
            android:visibility="visible"
            app:roundAsCircle="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:viewAspectRatio="1.33" />

        <TextView
            android:id="@+id/user_image_tv"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/circle_black_fill_white_border"
            android:gravity="center"
            android:maxLines="1"
            android:text="AU"
            android:textColor="@color/tw__solid_white"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Users"
        android:layout_gravity="center_vertical"
        android:textColor="@color/tw__solid_white"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:maxLines="1"/>



</LinearLayout>