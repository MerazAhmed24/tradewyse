<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tip_bg_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_paddng_10dp"
                android:layout_marginStart="@dimen/common_paddng_10dp"
                android:layout_marginEnd="@dimen/common_paddng_10dp"
                android:gravity="center"
                android:text="Attach Media"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark_grey1"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_paddng_10dp"
                android:layout_marginEnd="@dimen/common_paddng_10dp"
                android:layout_marginBottom="@dimen/common_paddng_10dp"
                android:gravity="center"
                android:text="What would you like to attach?"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark_grey1"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/common_paddng_10dp"
                android:background="@color/text_color_light_grey"
                android:text="Camera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/textViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:gravity="center"
                android:text="Photo"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_light_grey"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/textViewVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:gravity="center"
                android:text="Video"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_light_grey"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/textViewDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:gravity="center"
                android:text="Browse File"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_light_grey"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/optionCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_paddng_15dp"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_xlarge" />

    </androidx.cardview.widget.CardView>


</LinearLayout>
