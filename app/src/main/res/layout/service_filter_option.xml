<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tip_bg_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/services_filter"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark_grey"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/common_paddng_10dp"
                android:background="@color/text_color_light_grey"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFilter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"/>

            <TextView
                android:id="@+id/filterResetTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size_xlarge"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/optionCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_xlarge" />

    </androidx.cardview.widget.CardView>


</LinearLayout>
