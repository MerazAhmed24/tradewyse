<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/tip_bg_color"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingTop="0dp"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select image from"
                android:gravity="center"
                android:layout_margin="@dimen/common_paddng_10dp"
                android:textColor="@color/text_color_dark_grey"
                android:textSize="@dimen/text_size_large"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_light_grey"
                android:text="Camera"
                android:layout_marginTop="@dimen/common_paddng_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge"></TextView>

            <TextView
                android:id="@+id/optionCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:textColor="@color/text_color_dark_grey"
                android:textSize="@dimen/text_size_xlarge"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_light_grey"
                android:text="Camera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_xlarge"></TextView>
            <TextView
                android:id="@+id/optionGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo Library"
                android:gravity="center"
                android:layout_margin="@dimen/common_paddng_15dp"
                android:textColor="@color/text_color_dark_grey"
                android:textSize="@dimen/text_size_xlarge"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        >
        <TextView
            android:id="@+id/optionCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:layout_margin="@dimen/common_paddng_15dp"
            android:textColor="@color/text_color_dark_grey"
            android:textSize="@dimen/text_size_xlarge"></TextView>

    </androidx.cardview.widget.CardView>


</LinearLayout>
