<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutRootTitle">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_paddng_15dp"
        android:layout_marginTop="@dimen/common_paddng_15dp"
        android:layout_marginEnd="@dimen/common_paddng_15dp"
        android:layout_marginBottom="@dimen/common_paddng_15dp"
        android:gravity="center"
        android:text="@string/mentors_tips"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_xlarge" />

    <ImageView
        android:id="@+id/imageViewCheck"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/lock"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone"/>

    <View
        android:layout_below="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_light_grey"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_xlarge"/>

</RelativeLayout>