<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cross"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_picked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_caption"
        android:layout_below="@+id/img_cross"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_0149" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_caption"
        android:layout_below="@+id/img_cross"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_caption"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:inputType="textMultiLine"
        android:hint="Add a caption..."
        android:paddingStart="5dp"
        android:paddingEnd="60dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/text_color_white"
        android:textColorHint="@color/text_color_white"
        android:gravity="top"
        android:textSize="@dimen/_12sdp"
        android:background="@color/text_color_dark_grey"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_send"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_blue_fill"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_send_24" />

</RelativeLayout>