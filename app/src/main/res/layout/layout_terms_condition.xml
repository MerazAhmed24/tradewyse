<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.info.tradewyse.TermsOfUseActivity">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/login_bg"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rootLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center">

            <RelativeLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="45dp"
                    android:padding="5dp"
                    android:layout_marginLeft="@dimen/common_paddng_20dp"
                    android:layout_marginRight="@dimen/common_paddng_20dp"
                    android:background="@drawable/login_bg"
                    android:layout_marginTop="@dimen/common_paddng_50dp"

                />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyProfile"

        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/term_cancel_color"
            android:text="@string/term_cancel"
            android:textAllCaps="false"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btnAcceptTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/term_accept"
            android:textAllCaps="false"
            android:textColor="@color/text_color_white"
            android:background="@color/login_btn_color"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</RelativeLayout>
