<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:minWidth="@dimen/stock_list_item_width"
    android:layout_height="@dimen/stock_list_item_height"
    android:layout_marginRight="@dimen/common_paddng_4dp"
    android:layout_marginLeft="@dimen/common_paddng_2dp"
    android:id="@+id/root"

    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/rounded_corner">

    <RelativeLayout
        android:id="@+id/firstRootRowId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_paddng_2dp"
        android:layout_marginRight="@dimen/common_paddng_2dp"
        android:gravity="center_vertical|top"
        android:paddingLeft="@dimen/common_paddng_5dp"
        android:paddingTop="@dimen/common_paddng_5dp"
        android:paddingRight="@dimen/common_paddng_5dp"
        android:paddingBottom="@dimen/common_paddng_5dp">

        <!--  -->

        <TextView
            android:id="@+id/txtStockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/common_paddng_1dp"
            android:maxLength="22"
            android:text="SPY "
            android:textColor="#fff"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStockName"
            android:layout_marginTop="@dimen/common_paddng_1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStockPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_paddng_20dp"
                android:layout_weight="0"
                android:text="$247.75"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
            <!-- -->


            <TextView
                android:id="@+id/txtStockPriceChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/common_paddng_20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="-24.28"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>