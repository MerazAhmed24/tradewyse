<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/timeline_adapter_parent_ll"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_paddng_10dp"
    android:paddingRight="@dimen/common_paddng_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@color/text_color_grey" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/common_paddng_20dp"
            android:src="@drawable/drawable_circle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tipTweetDetailLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_paddng_5dp"
            android:paddingRight="@dimen/common_paddng_5dp"
            android:paddingBottom="@dimen/common_paddng_5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/horLine"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@color/text_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toRightOf="@id/horLine"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/twitterwhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="@string/tweeted"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_tweet_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:background="@drawable/bg_with_white_rounded_border"
                        android:justificationMode="inter_word"
                        android:maxEms="10"
                        android:padding="@dimen/_5sdp"
                        android:text="$JSM current price: $20.52 suggested entry: $21.95 exit: $24.17 and stop: $22.00 Stock Tip made at 21.95 price by @starvivek91"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:layout_weight="1.1"
                        android:gravity="right"
                        android:padding="@dimen/common_paddng_2dp"
                        android:text="8:35 pm"
                        android:textColor="@color/dot_dark_screen3"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>