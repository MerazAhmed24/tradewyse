<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="#203257"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="8dp"
        android:paddingBottom="@dimen/_10sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_white_border"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/tw__solid_white"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="There are -18 days left in your free trial"
                android:textColor="@color/tw__solid_white"
                android:textSize="12sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cross"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/cancle"
                android:tint="@color/tw__solid_white"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_paddng_10dp"
            android:layout_marginBottom="@dimen/common_paddng_8dp"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_header_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/place_holder_profile_icon"
                app:roundAsCircle="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:viewAspectRatio="1.33" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_edit_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/circle_blue_fill_white_border"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:tint="@color/text_color_white" />


            <!--  <ImageView
               android:id="@+id/img_header_profile"
               android:layout_width="75dp"
               android:layout_height="75dp"
               android:layout_gravity="center"
               android:layout_marginTop="8dp"
               android:contentDescription="@string/nav_header_desc"
               app:srcCompat="@drawable/dummy_image" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_visit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Visit Profile"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
</layout>