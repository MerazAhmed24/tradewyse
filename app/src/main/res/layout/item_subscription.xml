<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    app:cardCornerRadius="@dimen/common_paddng_10dp"
    app:cardUseCompatPadding="true">

    <View
        android:id="@+id/layoutDisable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/unselected_subscription">

        <TextView
            android:id="@+id/txtSubscriptionAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_xxxlarge"
            android:textStyle="bold"
            tools:text="$30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSubscriptionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large"
                android:textStyle="normal"
                tools:text="A Week" />

            <TextView
                android:id="@+id/txtYourCurrentPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="-15dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                tools:text="Your Current Plan"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

