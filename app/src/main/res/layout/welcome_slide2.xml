<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg" />

<!--        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tour2" />-->

    </RelativeLayout>

    <View
        android:id="@+id/view_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tour_heading_margin_top"
        android:layout_marginBottom="@dimen/welcome_screen_layout_margin_bottom"
        android:orientation="vertical"
        android:padding="@dimen/common_paddng_10dp">

        <TextView
            android:id="@+id/titleTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tour2Title"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_large_heading"
            />

        <TextView
            android:id="@+id/descriptionTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_paddng_7dp"
            android:layout_marginRight="@dimen/common_paddng_7dp"
            android:text="@string/tour2_desc1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:padding="@dimen/common_paddng_5dp"
            android:layout_marginTop="@dimen/mar_top_tour"
            android:visibility="gone"
            android:textSize="@dimen/text_size_xxlarge" />

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/common_paddng_10dp"
            android:paddingLeft="@dimen/common_paddng_10dp"
            android:layout_marginTop="@dimen/mar_top_tour"
            android:layout_weight="1"
           />

        <TextView
            android:id="@+id/descriptionTour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_top_tour"
            android:padding="@dimen/common_paddng_5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/welcome2_text_new"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/common_paddng_7dp"
            android:layout_marginRight="@dimen/common_paddng_7dp"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</FrameLayout>