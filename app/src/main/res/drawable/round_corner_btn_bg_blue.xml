<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:layout_width="wrap_content">
            <solid android:color="@color/text_color_light_grey1" />
            <!--border color and border width-->
            <stroke android:width="0dp" android:color="@color/colorPrimary" />
            <!--border radius in dp-->
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <!--border color and border width-->
            <stroke android:width="4dp" android:color="@color/colorPrimary" />
            <!--border radius in dp-->
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <!--border color and border width-->
            <stroke android:width="4dp" android:color="@color/colorPrimary" />
            <!--border radius in dp-->
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

        </shape>
    </item>

</selector>